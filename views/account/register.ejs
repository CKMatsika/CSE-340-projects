<div class="register-form">
    <h2>Register</h2>
    <% if (messages.notice) { %>
        <div class="notice"><%= messages.notice %></div>
    <% } %>
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="errors">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    <form action="/account/register" method="post">
        <div class="form-group">
            <label for="account_firstname">First Name:</label>
            <input type="text" id="account_firstname" name="account_firstname" required value="<%= typeof account_firstname != 'undefined' ? account_firstname : '' %>">
        </div>
        <div class="form-group">
            <label for="account_lastname">Last Name:</label>
            <input type="text" id="account_lastname" name="account_lastname" required value="<%= typeof account_lastname != 'undefined' ? account_lastname : '' %>">
        </div>
        <div class="form-group">
            <label for="account_email">Email:</label>
            <input type="email" id="account_email" name="account_email" required value="<%= typeof account_email != 'undefined' ? account_email : '' %>">
        </div>
        <div class="form-group">
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" required>
            <small>Password must be at least 8 characters long and contain at least one lowercase letter, one uppercase letter, and one number.</small>
        </div>
        <button type="submit">Register</button>
    </form>
    <p>Already have an account? <a href="/account/login">Login here</a></p>
</div>
