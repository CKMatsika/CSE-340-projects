<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (typeof accountData !== 'undefined' && accountData) { %>
            <!-- User is logged in -->
            <a title="Welcome <%= accountData.account_firstname %>" href="/account/management">Welcome <%= accountData.account_firstname %></a>
            <a title="Click to log out" href="/account/logout">Logout</a>
        <% } else { %>
            <!-- User is not logged in -->
            <a title="Click to log in" href="/account/login">My Account</a>
        <% } %>
    </div>
</header>